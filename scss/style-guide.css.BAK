html {
  font-size: 62.5%;
}

body {
  font-size: 1.6rem;
  font-family: "Sarabun", sans-serif;
}

a {
  text-decoration: none;
}

img {
  max-width: 100%;
}

input, textarea, select {
  font-family: "Sarabun", sans-serif;
  font-size: 1.6rem;
}

.extra1, .extra2, .extra3, .extra4, .extra5, .extra6 {
  display: none;
}

